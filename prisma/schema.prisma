datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
} 

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

model User {
  id        String@id @default(uuid())
  name      String
  email     String@unique 
  password  String
  //avatar    String


  @@map("user")
}

model Category{
  category  String@unique 

  @@map("category")
  product_category  Product[] 
}

model Product{
  id            String@id @default(uuid())
  name          String @unique
  price         Float
  amout         Int

  category Category @relation(fields: [product_category], references: [category], onDelete: Cascade)
  product_category      String

  shipping Shipping? @relation(fields: [shipping_id], references: [id])
  shipping_id           String? @unique
  @@map("product")  
}

model Shipping{
  id            String@id @default(uuid())
  created_at    DateTime @default(now())
  product_amout Int

  products Product[]

}