datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
} 

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String@id @default(uuid())
  name      String
  email     String@unique 
  password  String
  //avatar    String


  @@map("user")
}

model Category{
  category  String@unique 

  @@map("category")
  product_category  Product[] 
}

model Product{
  id            String@id @default(uuid())
  name          String @unique
  price         Float
  amout         Int

  category Category @relation(fields: [product_category], references: [category])
  product_category      String

  // shipping Shipping @relation(fields: [product_shipping], references: [id])
  // product_shipping  String

  @@map("product")  
}

